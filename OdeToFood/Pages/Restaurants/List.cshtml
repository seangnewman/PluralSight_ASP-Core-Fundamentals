@page


@model OdeToFood.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-lg">
                <button class="btn btn-primary ">
                    <i class="fas fa-search  fa-sm"></i>
                </button>
            </span>
        </div>
        </div>
</form>
    
       
            
           
              
           
       

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-search-plus"></i>
            </a>
        </td>
         <td>
            <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-edit"></i>
            </a>
         </td>

    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add Restaurant</a>

<div>@Model.Message</div>